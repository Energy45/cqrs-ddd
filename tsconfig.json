{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "rootDir": "./src",
      "noEmit": true,
      "types": ["node"],
      "incremental": true,
      "noImplicitAny": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }